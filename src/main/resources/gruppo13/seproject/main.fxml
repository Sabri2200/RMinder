<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo13.seproject.MainController">
    <SplitPane dividerPositions="0.34808013355592654" prefHeight="506.0" prefWidth="763.0">
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="559.0">
            <VBox alignment="CENTER" layoutX="2.0" layoutY="-2.0" prefHeight="506.0" prefWidth="261.0" spacing="20.0">
                <TextField fx:id="ruleNameField" promptText="Rule Name">
                    <font>
                        <Font size="15.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </VBox.margin>
                </TextField>
                <ComboBox fx:id="triggerSelector" prefWidth="150.0" promptText="Trigger" />
                <HBox fx:id="clockTriggerHBox" alignment="CENTER" prefHeight="21.0" prefWidth="261.0" visible="false">
                    <TextField fx:id="hourField" promptText="Hour">
                        <HBox.margin>
                            <Insets left="20.0" right="20.0" />
                        </HBox.margin>
                    </TextField>
               <Label text=":" />
                    <TextField fx:id="minuteField" promptText="Minute">
                        <HBox.margin>
                            <Insets left="20.0" right="20.0" />
                        </HBox.margin>
                    </TextField>
                </HBox>
                <ComboBox fx:id="actionSelector" prefWidth="150.0" promptText="Action" />
                <VBox fx:id="messageActionVBox" prefHeight="58.0" prefWidth="261.0" visible="false">
                    <TextField fx:id="titleAlertField" promptText="Title" />
                    <TextField fx:id="messageAlertField" promptText="Message" />
                </VBox>
                <VBox fx:id="fileSelectorVBox" alignment="CENTER" prefHeight="30.0" prefWidth="261.0" visible="false">
                    <Button fx:id="fileSelectorBtn" mnemonicParsing="false" onAction="#fileSelector" text="Select a mp3 file" />
                </VBox>
            <Label fx:id="fileChosen" />
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
                    <Button fx:id="resetBtn" mnemonicParsing="false" onAction="#resetRule" text="Reset" />
                    <Button fx:id="saveRuleBtn" mnemonicParsing="false" onAction="#saveRule" text="Save" />
                </HBox>
            </VBox>
        </AnchorPane>
        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
            <VBox alignment="BOTTOM_CENTER" layoutX="-2.0" prefHeight="504.0" prefWidth="493.0">
                <TableView fx:id="tableView" prefHeight="505.0" prefWidth="493.0">
                    <columns>
                        <TableColumn fx:id="nameClm" prefWidth="112.0" text="Name" />
                        <TableColumn fx:id="triggerClm" prefWidth="125.0" text="Trigger" />
                        <TableColumn fx:id="actionClm" prefWidth="115.0" text="Action" />
                        <TableColumn fx:id="stateClm" prefWidth="140.0" text="State" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
               <contextMenu>
                  <ContextMenu fx:id="contextMenu">
                    <items>
                      <MenuItem fx:id="editBtn" mnemonicParsing="false" onAction="#editRuleAction" text="Edit" />
                        <MenuItem fx:id="removeBtn" mnemonicParsing="false" onAction="#removeRulesAction" text="Delete" />
                        <MenuItem fx:id="saveToFileBtn" mnemonicParsing="false" onAction="#saveRulesToFile" text="Save to File" />
                        <MenuItem fx:id="loadFromFileBtn" mnemonicParsing="false" onAction="#loadRulesFromFile" text="Load from File" />
                    </items>
                  </ContextMenu>
               </contextMenu>
                </TableView>
            </VBox>
        </AnchorPane>
    </SplitPane>
</AnchorPane>
